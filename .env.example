# =============================================================================
# STAGE 1: AUTH0 + NEXTAUTH CONFIGURATION
# =============================================================================

# NextAuth Configuration
NEXTAUTH_URL=http://localhost:3000
NEXTAUTH_SECRET=your-super-secret-key-here

# Auth0 Configuration
AUTH0_CLIENT_ID=your-auth0-client-id
AUTH0_CLIENT_SECRET=your-auth0-client-secret
AUTH0_DOMAIN=your-tenant.auth0.com

# JWT Configuration
JWT_SECRET=your-jwt-secret-key

# =============================================================================
# STAGE 2: E-COMMERCE CONFIGURATION
# =============================================================================

# API Configuration
FAKE_STORE_API_URL=https://fakestoreapi.com
API_CACHE_TTL=3600

# Internationalization
DEFAULT_LOCALE=en
SUPPORTED_LOCALES=en,tr

# Performance Configuration
ISR_REVALIDATE_TIME=3600
IMAGE_OPTIMIZATION=true

# =============================================================================
# STAGE 3: MICRO FRONTEND CONFIGURATION
# =============================================================================

# Home App Configuration
HOME_APP_URL=http://localhost:3001
HOME_APP_PORT=3001

# Cart App Configuration
CART_APP_URL=http://localhost:3002
CART_APP_PORT=3002

# Shell App Configuration
SHELL_APP_URL=http://localhost:3000
SHELL_APP_PORT=3000

# Module Federation
MODULE_FEDERATION_ENABLED=true

# =============================================================================
# SHARED CONFIGURATION
# =============================================================================

# Environment
NODE_ENV=development

# Database (if needed for future extensions)
DATABASE_URL=postgresql://localhost:5432/nextauth

# Redis (for session storage if needed)
REDIS_URL=redis://localhost:6379

# Monitoring & Analytics
ANALYTICS_ENABLED=false
SENTRY_DSN=

# Security
CORS_ORIGIN=http://localhost:3000
RATE_LIMIT_MAX=100
RATE_LIMIT_WINDOW_MS=900000

# =============================================================================
# DEVELOPMENT CONFIGURATION
# =============================================================================

# Debug Settings
DEBUG=false
VERBOSE_LOGGING=false

# Development Tools
STORYBOOK_PORT=6006
TEST_WATCH_MODE=true

# Performance Monitoring
PERFORMANCE_MONITORING=true
LIGHTHOUSE_CI=false