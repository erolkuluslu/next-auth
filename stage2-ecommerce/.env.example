# Stage 2 E-commerce Environment Variables Example
# Copy this file to .env.local and fill in your actual values

# Auth0 Configuration (required for authentication)
AUTH0_CLIENT_ID=your_auth0_client_id_here
AUTH0_CLIENT_SECRET=your_auth0_client_secret_here
AUTH0_DOMAIN=your_auth0_domain.auth0.com

# NextAuth Configuration (required)
NEXTAUTH_URL=http://localhost:3001
NEXTAUTH_SECRET=your_nextauth_secret_at_least_32_characters_long

# App Configuration
NODE_ENV=development
PORT=3001
APP_NAME="Stage 2 E-commerce"
APP_VERSION=2.0.0
SITE_URL=http://localhost:3001

# Internationalization
NEXT_PUBLIC_DEFAULT_LOCALE=tr
NEXT_PUBLIC_SUPPORTED_LOCALES=tr,en

# API Configuration
FAKE_STORE_API_URL=https://fakestoreapi.com
API_TIMEOUT=5000
API_RETRIES=3

# Security Configuration
CORS_ORIGINS=http://localhost:3001
RATE_LIMIT_MAX=100
RATE_LIMIT_WINDOW_MS=900000
NEXTAUTH_DEBUG=false

# Logging Configuration
LOG_LEVEL=debug
LOG_CONSOLE=true
LOG_FILE=false

# Session Configuration
SESSION_MAX_AGE=2592000
SESSION_UPDATE_AGE=86400